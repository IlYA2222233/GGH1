-- üîÑ –§—É–Ω–∫—Ü–∏—è –∞–Ω–∏–º–∞—Ü–∏–∏ –∫–Ω–æ–ø–æ–∫
local function setupButtonAnimation(button, normalColor, hoverColor)
    button.MouseEnter:Connect(function()
        TweenService:Create(button, TweenInfo.new(0.2), {
            BackgroundColor3 = hoverColor,
            Size = UDim2.new(1, -15, button.Size.Y.Scale, button.Size.Y.Offset)
        }):Play()
    end)
    
    button.MouseLeave:Connect(function()
        TweenService:Create(button, TweenInfo.new(0.2), {
            BackgroundColor3 = normalColor,
            Size = UDim2.new(1, -20, button.Size.Y.Scale, button.Size.Y.Offset)
        }):Play()
    end)
    
    button.MouseButton1Down:Connect(function()
        TweenService:Create(button, TweenInfo.new(0.1), {
            BackgroundColor3 = Color3.fromRGB(255, 255, 255),
            TextColor3 = normalColor
        }):Play()
    end)
    
    button.MouseButton1Up:Connect(function()
        TweenService:Create(button, TweenInfo.new(0.1), {
            BackgroundColor3 = hoverColor,
            TextColor3 = Color3.fromRGB(255, 255, 255)
        }):Play()
    end)
end

-- üé® –ù–∞—Å—Ç—Ä–æ–π–∫–∞ –∞–Ω–∏–º–∞—Ü–∏–π –∫–Ω–æ–ø–æ–∫
setupButtonAnimation(FovButton, GUI_SETTINGS.AccentColor, Color3.fromRGB(140, 110, 255))
setupButtonAnimation(GraySkyButton, Color3.fromRGB(100, 100, 120), Color3.fromRGB(130, 130, 150))
setupButtonAnimation(NormalSkyButton, Color3.fromRGB(80, 160, 255), Color3.fromRGB(110, 190, 255))

-- üéØ –§—É–Ω–∫—Ü–∏—è –∏–∑–º–µ–Ω–µ–Ω–∏—è FOV
local function changeFov(value)
    local fov = tonumber(value)
    
    if not fov then
        StatusLabel.Text = "‚ùå –í–≤–µ–¥–∏—Ç–µ —á–∏—Å–ª–æ!"
        StatusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
        task.wait(2)
        StatusLabel.Text = "–ì–æ—Ç–æ–≤ –∫ —Ä–∞–±–æ—Ç–µ"
        StatusLabel.TextColor3 = Color3.fromRGB(150, 255, 150)
        return
    end
    
    -- –û–≥—Ä–∞–Ω–∏—á–∏–≤–∞–µ–º –∑–Ω–∞—á–µ–Ω–∏—è
    fov = math.clamp(fov, 70, 120)
    
    -- –ü—Ä–æ–±—É–µ–º –∏–∑–º–µ–Ω–∏—Ç—å FOV –∫–∞–º–µ—Ä—ã
    local camera = workspace.CurrentCamera
    if camera then
        camera.FieldOfView = fov
        StatusLabel.Text = "‚úÖ FOV —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω: " .. fov
        StatusLabel.TextColor3 = Color3.fromRGB(100, 255, 100)
        
        -- –ê–Ω–∏–º–∞—Ü–∏—è –∫–Ω–æ–ø–∫–∏
        TweenService:Create(FovButton, TweenInfo.new(0.3), {
            BackgroundColor3 = Color3.fromRGB(100, 255, 100)
        }):Play()
        
        task.wait(1)
        TweenService:Create(FovButton, TweenInfo.new(0.3), {
            BackgroundColor3 = GUI_SETTINGS.AccentColor
        }):Play()
        
        task.wait(1)
        StatusLabel.Text = "–ì–æ—Ç–æ–≤ –∫ —Ä–∞–±–æ—Ç–µ"
        StatusLabel.TextColor3 = Color3.fromRGB(150, 255, 150)
    else
        StatusLabel.Text = "‚ùå –ö–∞–º–µ—Ä–∞ –Ω–µ –Ω–∞–π–¥–µ–Ω–∞"
        StatusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
        task.wait(2)
        StatusLabel.Text = "–ì–æ—Ç–æ–≤ –∫ —Ä–∞–±–æ—Ç–µ"
        StatusLabel.TextColor3 = Color3.fromRGB(150, 255, 150)
    end
end

-- üå´Ô∏è –§—É–Ω–∫—Ü–∏—è Gray Sky
local function applyGraySky()
    StatusLabel.Text = "üîÑ –ü—Ä–∏–º–µ–Ω—è–µ–º Gray Sky..."
    StatusLabel.TextColor3 = Color3.fromRGB(255, 200, 100)
    
    -- –ê–Ω–∏–º–∞—Ü–∏—è –∫–Ω–æ–ø–∫–∏
    TweenService:Create(GraySkyButton, TweenInfo.new(0.3), {
        BackgroundColor3 = Color3.fromRGB(200, 200, 200)
    }):Play()
    
    -- –ü—Ä–∏–º–µ–Ω—è–µ–º —Å–µ—Ä–æ–µ –Ω–µ–±–æ
    local sky = Lighting:FindFirstChild("Sky") or Instance.new("Sky")
    
    -- –°–µ—Ä—ã–µ —Ç–µ–∫—Å—Ç—É—Ä—ã –¥–ª—è –Ω–µ–±–∞
    sky.SkyboxBk = "rbxassetid://2350402582"  -- –ó–∞–¥–Ω—è—è
    sky.SkyboxDn = "rbxassetid://2350402582"  -- –ù–∏–∂–Ω—è—è
    sky.SkyboxFt = "rbxassetid://2350402582"  -- –ü–µ—Ä–µ–¥–Ω—è—è
    sky.SkyboxLf = "rbxassetid://2350402582"  -- –õ–µ–≤–∞—è
    sky.SkyboxRt = "rbxassetid://2350402582"  -- –ü—Ä–∞–≤–∞—è
    sky.SkyboxUp = "rbxassetid://2350402582"  -- –í–µ—Ä—Ö–Ω—è—è
    
    -- –ù–∞—Å—Ç—Ä–æ–π–∫–∏ –æ—Å–≤–µ—â–µ–Ω–∏—è
    Lighting.FogColor = Color3.fromRGB(150, 150, 150)  -- –°–µ—Ä—ã–π —Ç—É–º–∞–Ω
    Lighting.FogEnd = 50000  -- –î–∞–ª—å–Ω–æ—Å—Ç—å —Ç—É–º–∞–Ω–∞
    Lighting.Brightness = 1  -- –Ø—Ä–∫–æ—Å—Ç—å
    Lighting.OutdoorAmbient = Color3.fromRGB(150, 150, 150)  -- –°–µ—Ä—ã–π –æ–∫—Ä—É–∂–∞—é—â–∏–π —Å–≤–µ—Ç
    Lighting.TimeOfDay = "17:00:00"  -- –í–µ—á–µ—Ä–Ω–µ–µ –≤—Ä–µ–º—è
    
    -- –£–¥–∞–ª—è–µ–º —Å—Ç–∞—Ä—ã–µ –Ω–µ–±–µ—Å–∞ –µ—Å–ª–∏ –µ—Å—Ç—å
    if Lighting:FindFirstChild("sky") then
        Lighting.sky:Destroy()
    end
    
    sky.Parent = Lighting
    
    -- –ü–ª–∞–≤–Ω–æ–µ –∏–∑–º–µ–Ω–µ–Ω–∏–µ —Ü–≤–µ—Ç–∞ —Ñ–æ–Ω–∞
    for i = 0, 1, 0.05 do
        Lighting.Ambient = Color3.fromRGB(
            math.floor(150 * i),
            math.floor(150 * i),
            math.floor(150 * i)
        )
        task.wait(0.03)
    end
    
    StatusLabel.Text = "‚úÖ Gray Sky –∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞–Ω"
    StatusLabel.TextColor3 = Color3.fromRGB(200, 200, 255)
    
    task.wait(1)
    TweenService:Create(GraySkyButton, TweenInfo.new(0.3), {
        BackgroundColor3 = Color3.fromRGB(100, 100, 120)
    }):Play()
    
    task.wait(1)
    StatusLabel.Text = "–ì–æ—Ç–æ–≤ –∫ —Ä–∞–±–æ—Ç–µ"
    StatusLabel.TextColor3 = Color3.fromRGB(150, 255, 150)
end

-- üåà –§—É–Ω–∫—Ü–∏—è Normal Sky
local function applyNormalSky()
    StatusLabel.Text = "üîÑ –í–æ–∑–≤—Ä–∞—â–∞–µ–º –Ω–æ—Ä–º–∞–ª—å–Ω–æ–µ –Ω–µ–±–æ..."
    StatusLabel.TextColor3 = Color3.fromRGB(100, 200, 255)
    
    -- –ê–Ω–∏–º–∞—Ü–∏—è –∫–Ω–æ–ø–∫–∏
    TweenService:Create(NormalSkyButton, TweenInfo.new(0.3), {
        BackgroundColor3 = Color3.fromRGB(150, 210, 255)
    }):Play()
    
    -- –í–æ–∑–≤—Ä–∞—â–∞–µ–º –Ω–æ—Ä–º–∞–ª—å–Ω—ã–µ –Ω–∞—Å—Ç—Ä–æ–π–∫–∏
    if Lighting:FindFirstChild("Sky") then
        local sky = Lighting.Sky
        
        -- –í–æ–∑–≤—Ä–∞—â–∞–µ–º —Å—Ç–∞–Ω–¥–∞—Ä—Ç–Ω—ã–µ —Ç–µ–∫—Å—Ç—É—Ä—ã
        sky.SkyboxBk = "rbxasset://textures/sky/sky512_bk.tex"
        sky.SkyboxDn = "rbxasset://textures/sky/sky512_dn.tex"
        sky.SkyboxFt = "rbxasset://textures/sky/sky512_ft.tex"
        sky.SkyboxLf = "rbxasset://textures/sky/sky512_lf.tex"
        sky.SkyboxRt = "rbxasset://textures/sky/sky512_rt.tex"
        sky.SkyboxUp = "rbxasset://textures/sky/sky512_up.tex"
    end
    
    -- –í–æ–∑–≤—Ä–∞—â–∞–µ–º –Ω–æ—Ä–º–∞–ª—å–Ω—ã–µ –Ω–∞—Å—Ç—Ä–æ–π–∫–∏ –æ—Å–≤–µ—â–µ–Ω–∏—è
    Lighting.FogColor = Color3.fromRGB(191, 191, 191)
    Lighting.FogEnd = 100000
    Lighting.Brightness = 1
    Lighting.OutdoorAmbient = Color3.fromRGB(128, 128, 128)
    Lighting.TimeOfDay = "14:00:00"
    
    -- –ü–ª–∞–≤–Ω–æ–µ –≤–æ–∑–≤—Ä–∞—â–µ–Ω–∏–µ —Ü–≤–µ—Ç–∞
    for i = 1, 0, -0.05 do
        Lighting.Ambient = Color3.fromRGB(
            math.floor(150 * i + 50),
            math.floor(150 * i + 50),
            math.floor(150 * i + 50)
        )
        task.wait(0.03)
    end
    
    StatusLabel.Text = "‚úÖ –ù–æ—Ä–º–∞–ª—å–Ω–æ–µ –Ω–µ–±–æ –≤–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–æ"
    StatusLabel.TextColor3 = Color3.fromRGB(100, 255, 200)
    
    task.wait(1)
    TweenService:Create(NormalSkyButton, TweenInfo.new(0.3), {
        BackgroundColor3 = Color3.fromRGB(80, 160, 255)
    }):Play()
    
    task.wait(1)
    StatusLabel.Text = "–ì–æ—Ç–æ–≤ –∫ —Ä–∞–±–æ—Ç–µ"
    StatusLabel.TextColor3 = Color3.fromRGB(150, 255, 150)
end

-- üéÆ –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ —Å–æ–±—ã—Ç–∏–π

-- FOV –∫–Ω–æ–ø–∫–∞
FovButton.MouseButton1Click:Connect(function()
    changeFov(FovTextBox.Text)
end)

-- Enter –≤ TextBox
FovTextBox.FocusLost:Connect(function(enterPressed)
    if enterPressed then
        changeFov(FovTextBox.Text)
    end
end)

-- Gray Sky –∫–Ω–æ–ø–∫–∞
GraySkyButton.MouseButton1Click:Connect(applyGraySky)

-- Normal Sky –∫–Ω–æ–ø–∫–∞
NormalSkyButton.MouseButton1Click:Connect(applyNormalSky)

-- ‚ùå –ó–∞–∫—Ä—ã—Ç–∏–µ GUI
CloseButton.MouseButton1Click:Connect(function()
    -- –ê–Ω–∏–º–∞—Ü–∏—è –∑–∞–∫—Ä—ã—Ç–∏—è
    local closeTween = TweenService:Create(MainFrame, TweenInfo.new(0.4, Enum.EasingStyle.Back, Enum.EasingDirection.In), {
        Size = UDim2.new(0, 0, 0, 0),
        Position = UDim2.new(0.5, 0, 0.5, 0),
        BackgroundTransparency = 1
    })
    
    local fadeTween = TweenService:Create(MainFrame, TweenInfo.new(0.4), {
        BackgroundTransparency = 1
    })
    
    closeTween:Play()
    fadeTween:Play()
    
    closeTween.Completed:Wait()
    ScreenGui:Destroy()
end)

-- ‚å®Ô∏è –ì–æ—Ä—è—á–∞—è –∫–ª–∞–≤–∏—à–∞ –¥–ª—è –ø–æ–∫–∞–∑–∞/—Å–∫—Ä—ã—Ç–∏—è
local UserInputService = game:GetService("UserInputService")
local guiVisible = true

UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if not gameProcessed and input.KeyCode == Enum.KeyCode.RightControl then
        guiVisible = not guiVisible
        
        if guiVisible then
            MainFrame.Visible = true
            TweenService:Create(MainFrame, TweenInfo.new(0.3, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {
                Size = UDim2.new(0, 320, 0, 400),
                Position = UDim2.new(0.5, -160, 0.5, -200),
                BackgroundTransparency = 0
            }):Play()
        else
            TweenService:Create(MainFrame, TweenInfo.new(0.3, Enum.EasingStyle.Back, Enum.EasingDirection.In), {
                Size = UDim2.new(0, 0, 0, 0),
                Position = UDim2.new(0.5, 0, 0.5, 0),
                BackgroundTransparency = 1
            }):Play()
            
            task.wait(0.3)
            MainFrame.Visible = false
        end
    end
end)

-- üéâ –ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –≤ –∫–æ–Ω—Å–æ–ª—å
print("====================================")
print("üåå GGH Sky Control v1.0")
print("====================================")
print("üéØ FOV Control: –ò–∑–º–µ–Ω–µ–Ω–∏–µ Field of View")
print("üå´Ô∏è Gray Sky: –°–µ—Ä–æ–µ –∞—Ç–º–æ—Å—Ñ–µ—Ä–Ω–æ–µ –Ω–µ–±–æ")
print("üåà Normal Sky: –í–æ–∑–≤—Ä–∞—Ç –∫ —Å—Ç–∞–Ω–¥–∞—Ä—Ç–Ω–æ–º—É –Ω–µ–±—É")
print("‚å®Ô∏è –£–ø—Ä–∞–≤–ª–µ–Ω–∏–µ: RightControl - –ø–æ–∫–∞–∑–∞—Ç—å/—Å–∫—Ä—ã—Ç—å GUI")
print("====================================")

-- üìä –ê–≤—Ç–æ-–æ–±–Ω–æ–≤–ª–µ–Ω–∏–µ —Å—Ç–∞—Ç—É—Å–∞
spawn(function()
    while ScreenGui and ScreenGui.Parent do
        -- –û–±–Ω–æ–≤–ª—è–µ–º —Å—Ç–∞—Ç—É—Å –≤ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏ –æ—Ç –≤—Ä–µ–º–µ–Ω–∏
        local time = Lighting.TimeOfDay
        if time:find("17") or time:find("18") or time:find("19") then
            StatusLabel.Text = "üïî –í–µ—á–µ—Ä–Ω–µ–µ –≤—Ä–µ–º—è: " .. time
        else
            StatusLabel.Text = "üåû –í—Ä–µ–º—è —Å—É—Ç–æ–∫: " .. time
        end
        
        task.wait(5)
    end
end)
